            <path fill="currentColor" d="M0,32L48,30.7C96,29,192,27,288,26.7C384,27,480,29,576,32C672,35,768,37,864,34.7C960,32,1056,24,1152,21.3C1248,19,1344,21,1392,22.7L1440,24L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
        </svg>
        
        <div class="container">
            <div class="footer-grid">
                <div>
                    <div class="footer-logo">
                        <a href="#hero">
                            <img src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEhnBzNdjl6bNp-nIdaiHVENczJhwlJNA7ocsyiOObMmzbu8at0dY5yGcZ9cLxLF39qI6gwNfqBxlkTDC0txVULEwQVwGkeEzN0Jq9MRTRagA48mh18UqTlR4WhsXOLAEZugUyhqJHB19xJgnkpe-S5VOWFgzpKFwctv3XP9XhH41vNTvq0ZS-nik58Qhr-O/s16000/remeex.png" alt="Remeex VISA Logo">
